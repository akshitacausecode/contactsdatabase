<html>
	<head>
		<title>create</title>
		<asset:stylesheet href="bootstrap.css"/>
		<asset:stylesheet href="font-awesome.min.css"/>
		<asset:stylesheet src="jquery.css"/>
		<asset:stylesheet src="bootstrap.min.js"/>
	</head>
	<body>
		<div class="container-fluid well">
        <h1 align="center">CONTACT DATABASE</h1>
    	</div>
    	<div class="box-model">
        	<div class="col-md-offset-4 col-md-4 col-xs-offset-4 col-xs-12 well">
            	<div>
                	<h3>ENTER DETAILS</h3>
					<g:form controller="Contacts" action="save">
						<div class="form-group">
							<g:textField name="firstName" placeholder="First Name" class="form-control" autofocus="firstName">
                        	</g:textField>	
                    	</div>	
						<div class="form-group">
							<g:textField name="lastName" placeholder="Last Name" class="form-control" autofocus="lastName">
                        	</g:textField>	
                    	</div>
		    			<div class="form-group">
							<g:textField name="email" placeholder="Email" class="form-control" autofocus="email">
                        	</g:textField>
						</div>
						<div class="form-group">
							<g:textField name="phoneNumber" placeholder="Phone Number" class="form-control" autofocus="phoneNumber">
                        	</g:textField>
						</div>
						<div class="form-group">
							<g:textField name="dob" placeholder="Date Of Birth" class="form-control" autofocus="dob">
                        	</g:textField>
						</div>
						<g:submitButton name="click here" class="btn btn-md"></g:submitButton>
                	</g:form>
                </div>
            </div>
		</div>
	</body>

